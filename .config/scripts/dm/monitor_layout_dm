#!/bin/sh

choices="Left\nRight\nRight Portrait\nOnly Computer"
chosen=$(echo -e "$choices" | dmenu -p "Where's the monitor?" -c -l 10)
case "$chosen" in
    ""              )                    ;;
    Left            ) left_mon && wp_dm  ;;
    Right           ) right_mon && wp_dm ;;
    "Right Portrait") right_mon_portrait && wp_dm;;
    "Only Computer" ) single_mon         ;;
esac
